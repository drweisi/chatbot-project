{
  "version": 2,
  "builds": [
    { 
      "src": "api/index.py", 
      "use": "@vercel/python",
      "config": {
        "pip": [
          "flask==2.0.1", 
          "werkzeug==2.0.1",
          "flask-cors==3.0.10", 
          "openai==1.7.0", 
          "python-dotenv==0.19.1", 
          "redis==4.3.4", 
          "cloudinary==1.32.0",
          "setuptools" 
        ]
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/api/index.py" }
  ]
}
